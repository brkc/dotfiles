# Link dotfiles
files=$(find . -maxdepth 1 -name '.*' -not -name . \
               -not -name .git -not -name .mozilla)
for file in $files; do
  file=$(basename $file)
  if [[ -e ~/$file ]]; then
    echo skipping $file
    continue
  fi
  ln -s $PWD/$file ~/$file
done
source .bash_profile

# Install debian packages
packages=(
  bzip2
  gcc
  make
  linux-headers-amd64
  xserver-xorg
  xinit
  x11-xserver-utils
  xterm
  i3
  gnome-themes-standard
  curl
  git
  vim
)
sudo apt-get install ${packages[*]}

# Install python
git clone https://github.com/yyuu/pyenv.git ~/.pyenv
pyenv install 3.4.3
pyenv global 3.4.3

# Install ruby (and rails)
gpg --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3
curl -sSL https://get.rvm.io | bash -s stable --rails --ignore-dotfiles

# Install node
curl https://raw.githubusercontent.com/creationix/nvm/master/install.sh | bash
[[ -s ~/.nvm/nvm.sh ]] && source ~/.nvm/nvm.sh
nvm install stable
nvm alias default stable

# Install go
curl https://raw.githubusercontent.com/moovweb/gvm/master/binscripts/gvm-installer | bash
source ~/.gvm/scripts/gvm
gvm install go1.4
gvm use go1.4 --default

# Install chrome
file=`mktemp`
curl https://dl.google.com/linux/direct/google-chrome-beta_current_amd64.deb >"$file"
sudo dpkg -i "$file"
rm "$file"
sudo apt-get -f install
